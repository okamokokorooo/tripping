- if user_signed_in?
  - if tweet.like_user(current_user.id)
    = button_to genre_program_likes_path(like, program_id: program.id), method: :delete, id: "like-button", remote: true do
      = image_tag("icon_red_heart.svg")
      %span
        = tweet.like_count
  - else
    = button_to genre_program_likes_path(tweet), id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      %span
        = program.like_count
- else
  - = image_tag("icon_heart.svg")
  %span
    = program.like_count
