.login_view
  %h2 TRIPPING
  .forming
    = form_for(resource, as: resource_name, url: session_path(resource_name),class:"forming") do |f|
      .field
        = f.label "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"form_space"
      .field
        = f.label "パスワード"
        %br/
        = f.password_field :password, autocomplete: "current-password",class:"form_space"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
        = f.submit "ログイン",class:"login_btn"
        = link_to "新規登録の方はこちら",  new_registration_path(resource_name)

      
