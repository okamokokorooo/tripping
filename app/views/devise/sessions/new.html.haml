.login_view
  
  %h1 TRIPPING
  %h2 ログイン
  .new_user
    = link_to "新規登録の方はこちら", new_registration_path(resource_name)
    = fa_icon 'mouse-pointer', class: 'icon'
  .forming
    = form_for(resource, as: resource_name, url: session_path(resource_name),class:"forming") do |f|
      .field
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"login_mail",placeholder: "mail"
      .field
        %br/
        = f.password_field :password, autocomplete: "current-password",class:"login_pass",placeholder: "パスワード"
        = f.submit "ログイン",class:"login_btn"


      
