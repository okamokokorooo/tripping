.login_view
  %h1 TRIPPING
  %h2 新規登録
  .new_user
    = link_to "ログインの方はこちら", new_session_path(resource_name)
    = fa_icon 'mouse-pointer', class: 'icon'
  .forming
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.text_field :name, autofocus: true, autocomplete: "name",class:"form_space",placeholder: "名前"
      .field
        %br
        = f.email_field :email, autofocus: true, autocomplete: "email",class:"form_space",placeholder: "mail"
      .field
        %br/
        = f.password_field :password, autocomplete: "new-password",class:"form_space",placeholder: "パスワード"
      .field
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password",class:"form_space",placeholder: "パスワード（確認用）"
      %br/
      = f.submit "登録する",class:"login_btn"
